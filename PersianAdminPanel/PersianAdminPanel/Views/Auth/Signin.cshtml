        $('#refresh').click(function () {
            $("#imgcpatcha").attr("src", "/Captcha/CaptchaImage?" + String(Math.random()));
            return
            $.ajax({
                url: '@Url.Action("CaptchaImage","Captcha")',
                type: "GET",
                data: null
            })
                .done(function (functionResult) {

                    $("#imgcpatcha").attr("src", "/Captcha/CaptchaImage?" + String(Math.random()));

            });

        });
    });*@
    </script>
</body>
</html>